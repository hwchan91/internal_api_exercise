<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3 class="text-center">Kittens Paradise</h3>
    <% @kittens.each do |kitten| %>
      <div style="margin: 20px 0px">
        <div class="row">
          <div class="col-md-8">
            <h4><%= kitten.name %></h4>
          </div>
          <div class="col-md-4 text-right">
            <%= link_to "Exterminate kitten", kitten, class: "btn btn-default text-right", method: :delete %>
          </div>
        </div>
        <ul class="text-center list-group">
          <li class="list-group-item">Age: <%= kitten.age %></li>
          <li class="list-group-item">Cuteness: <%= kitten.cuteness %></li>
          <li class="list-group-item">Softness <%= kitten.softness %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>

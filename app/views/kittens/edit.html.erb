<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3 class="text-center">Edit profile</h3>
    <%= form_for(@kitten) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :age %>
        <%= f.number_field :age, in: 0..50, step:1, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :cuteness %>
        <%= f.number_field :cuteness, in: 0..10, step:1, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :softness %>
        <%= f.number_field :softness, in: 0..10, step:1, class: 'form-control' %>
      </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= link_to "Exterminate kitten", @kitten, class: "btn btn-default", method: :delete %>
</div>

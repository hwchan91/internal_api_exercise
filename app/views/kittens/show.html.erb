<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <h4><%= @kitten.name %></h4>
      <ul class="list-group">
        <li class="list-group-item">Age: <%= @kitten.age %></li>
        <li class="list-group-item">Cuteness: <%= @kitten.cuteness %></li>
        <li class="list-group-item">Softness <%= @kitten.softness %></li>
      </ul>
  </div>
  <%= link_to "Exterminate kitten", @kitten, class: "btn btn-default text-right", method: :delete %>

</div>
